<div class="super_container">
	
	<!-- Home -->

	<div class="home">
		<!-- Image by https://unsplash.com/@peecho -->
		<div class="home_background parallax-window" data-parallax="scroll" data-image-src="https://i.f1g.fr/media/madame/1900x800_crop/sites/default/files/img/2018/05/la-felicita-a-station-f.jpg" data-speed="0.8"></div>
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="home_content">
						<div class="home_content_inner">
							<div class="home_title">Votre profil</div>
						</div>
					</div>
				</div>
			</div>
		</div>		
	</div>

	<!-- Services -->

	<div class="services">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="section_title text-center">
						<h2>Vos informations</h2>
					</div>
				</div>
			</div>
			<div class="row icon_box_container">

				<!-- Icon Box -->
				<div class="col-lg-4 icon_box_col">
					<div class="icon_box">
						<div class="icon_box_image"><%= image_tag("service_1.svg", class: "svg") %></div>
						<div class="icon_box_title">Nom complet</div>
						<p class="icon_box_text"><%= @user.first_name %> <%= @user.last_name %></p>
					</div>
				</div>

				<!-- Icon Box -->
				<div class="col-lg-4 icon_box_col">
					<div class="icon_box">
						<div class="icon_box_image"><%= image_tag("service_2.svg", class: "svg") %></div>
						<div class="icon_box_title">Votre pr√©sentation</div>
						<p class="icon_box_text"><%= @user.description %></p>
					</div>
				</div>

				<!-- Icon Box -->
				<div class="col-lg-4 icon_box_col">
					<div class="icon_box">
						<div class="icon_box_image"><%= image_tag("service_3.svg", class: "svg") %></div>
						<div class="icon_box_title">Adresse email</div>
						<p class="icon_box_text"><%= @user.email %></p>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col">
					<div class="section_title text-center">
						<div class="button about_button">
						<%= link_to ' Editer le profil ', edit_user_registration_path %></div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col">
					<div class="section_title text-center">
						<%= link_to " Mes favoris ", favorites_path, :class => "button-blue" %></br>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col">
					<div class="section_title text-center">
						<%= link_to "Mes recherches", favorites_path, :class => "button-blue" %>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>
