<div class="super_container">

  <div class="home contact">
    <div class="home_background parallax-window small-banner" data-parallax="scroll" data-speed="0.8">
      <%= image_tag("news.jpg") %>
    </div>
    <div class="home_content">
      <div class="home_content_inner">
        <%= link_to "Détails du vol", "#ancre", class: "home_text_small" %>
      </div>
    </div>
  </div>

  <div class="order-details">
  

    <ul class="list-group list-group-flush">

      <li class="list-group-item">Allé - Départ <br><%= @city_departure %> à <%= @departure_date %></br></li>
      <li class="list-group-item">Allé - Destination <br><%= @destination %> à <%= @arrival_date %></br></li>
      <li class="list-group-item">Retour - Départ <br><%= @back_citydeparture %> à <%= @back_departuredate %></br></li>
      <li class="list-group-item">Retour - Destination <br><%= @back_destination %> à <%= @back_arrivaldate %></br></li>
      <li class="list-group-item"> Prix <br><%= @price %>€</br></li>


    </ul>

  </div>

  <div class="stripe-reserv-button">
    <%= form_tag url_for(action: 'create', :controller => 'orders', :city_departure => @city_departure, :destination => @destination, :price => @price, :departure_date => @departure_date, :arrival_date => @arrival_date, :duration => @duration, :back_citydeparture => @back_citydeparture, :back_destination => @back_destination, :back_departuredate => @back_departuredate, :back_arrivaldate => @back_arrivaldate, :back_duration => @back_duration), method: "post" do %>
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-label="Réserver"
          data-amount="<%= @price_in_card %>"
          data-locale="eur">
      </script>
    <% end %>
  </div>

</div>
