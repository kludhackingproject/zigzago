
<div class="super_container">

	<div class="home profile">
    	<div class="home_background parallax-window small-banner" data-parallax="scroll" data-speed="0.8">
      	<%= image_tag("elements.jpg") %>
    	</div>
    	<div class="home_content">
      		<div class="home_content_inner">
        		<span class="home_text_small">Vos recherches enregistrées</span>
      		</div>
    	</div>
  	</div>

<div class="col-12">
	<div class="find_form_container">
		<%= form_tag url_for(action: 'show'), remote: true, id: "find_form", method: "post",  class: "find_form d-flex flex-md-row flex-column align-items-md-center align-items-start justify-content-md-between justify-content-start flex-wrap" do %>
			<% if @apisearch.each do |f| %>
				<div class="card_registered">
					<%= image_tag("save_search.jpg", class: "find_background") %>
						<div class="card_registered_row">
							<div class="card_registered_column">
								<div class="card_registered_departure">
									<p id="input-departure" type="text" class="destination find_input" required="required" placeholder="D'où partir ?" <%= text_field_tag :departure %> <%=  f.city_departure %></p>
								</div>

								<div class="card_registered_arrival">
									<p id="input-arrival" type="text" class="destination find_input" required="required" placeholder="Où aller ?" <%= text_field_tag :arrival %> <%= f.city_arrival %></p>
  								</div>
							</div>
							<div class="card_registered_column">
								<div class="card_registered_departure_date">
									<p class="destination find_input" <%= date_field_tag :departure_date %> <%= f.departure_date %></p>
								</div>

								<div class="card_registered_arrival_date">
									<p class="destination find_input" <%= date_field_tag :return_date %> <%= f.return_date %></p>
								</div>
							</div>
							<div class="card_registered_column">
								<div class="card_registered_button_search">
									<%= link_to root_path, class: "btn-search-plane" do %>
									<i class='fa fa-plane search-plane animated infinite pulse delay-2s ' data-toggle="tooltip" title="Rechercher mon vol"></i>
									<% end %>
								</div>
								<div class="card_registered_button_delete">
									<%= link_to apisearch_path(:id => f.id), method: "DELETE", class: "btn-delete-search" do %>
									<i class='fa fa-trash' data-toggle="tooltip" title="Effacer ma recherche"></i>
									<% end %>
								</div>
							</div>
						</div>
				</div>
			<% end.empty? %>
			<div class="col">
				<div class="empty_search_text"> Vous n'avez pas de recherche enregistrée </div>
				<p class ="empty_search_text_2"> Vous pouvez enregistrer vos recherches préférées depuis la page de recherche </p>
            	<div class="button_blue_apisearch">
                    <%= link_to "Rechercher de nouveaux trajets", root_path, class:"button-blue" %>
            	</div>
			<% end %>
			</div>
		<% end%>
	</div>
</div>