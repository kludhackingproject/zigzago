<div class="super_container">

  <div class="home profile">
    <div class="home_background parallax-window" data-parallax="scroll" data-speed="0.8">
      <%= image_tag("find.jpg") %>
    </div>
      <div class="home_content">
        <div class="home_content_inner">
        <span class="home_text_small">Mot de passe oublié ?</span>
        </div>
      </div>
    </div>
  </div>

  <div id="ancre">
    <div class="container">
      <div class="row contact_content">
        <div class="col-lg-6 devise-form">
          <div class="contact_form_container">
           <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "clearfix", id: "contact_form") do |f| %>
            	<%= render "devise/shared/error_messages", resource: resource %>
            	<%= f.label :adresse_email %><br />
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "contact_input contact_input_subject", id: "contact_input_subject", type: "email", placeholder: "Adresse email" %>
				<%= f.submit "Réinitialiser", class: "contact_send_btn trans_200", id: "contact_send_btn" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>