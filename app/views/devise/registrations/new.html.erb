<div class="super_container">
  <!-- Home -->
  <div class="home">
    <!-- Image by https://unsplash.com/@peecho -->
    <div class="home_background parallax-window" data-parallax="scroll" data-speed="0.8">
      <%= image_tag("find.jpg") %>
    </div>
    <div class="home_content">
      <div class="home_content_inner">
        <%= link_to "Inscription", "#ancre", class: "home_text_small" %>
      </div>
    </div>
  </div>
</div>

  <!-- Contact -->
<div class="contact" id="ancre">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="contact_title">Veuillez vous inscrire</div>
      </div>
    </div>

    <div class="row contact_content">
      <div class="col-lg-7">
        <div class="contact_form_container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "clearfix", id: "contact_form") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <%= f.label :prénom %><br />
            <%= f.text_field :first_name, class: "contact_input contact_input_subject", id: "contact_input_subject", type: "text", placeholder: "Prénom" %>
            <%= f.label :nom %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class: "contact_input contact_input_subject", id: "contact_input_subject", type: "text", placeholder: "Nom" %>
            <%= f.label :votre_présentation %><br />
            <%= f.text_area :description, autofocus: true, autocomplete: "email", class: "contact_message_input contact_input_message", id: "contact_input_subject", type: "text", placeholder: "Votre présentation" %>
            <%= f.label :adresse_email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "contact_input contact_input_subject", id: "contact_input_subject", type: "email", placeholder: "Adresse email" %>
            <%= f.label :mot_de_passe %>
            <% if @minimum_password_length %>
             <em>(<%= @minimum_password_length %> caractères minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autofocus: true, class: "contact_input contact_input_subject", id: "contact_input_subject", type: "password", placeholder: "Mot de passe" %>
            <%= f.label :confirmation_mot_de_passe %><br />
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "email", class: "contact_input contact_input_subject", id: "contact_input_subject", type: "password", placeholder: "Confirmation mot de passe" %>
          <%= f.submit "S'inscrire", class: "contact_send_btn trans_200", id: "contact_send_btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
