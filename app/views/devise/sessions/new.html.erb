<div class="super_container">

  <div class="home profile">
    <div class="home_background parallax-window small-banner" data-parallax="scroll" data-speed="0.8">
      <%= image_tag("find.jpg") %>
    </div>
    <div class="home_content">
      <div class="home_content_inner">
        <span class="home_text_small">Connexion</span>
      </div>
    </div>
  </div>

  <div id="ancre">
    <div class="container">
      <div class="row contact_content">
        <div class="col-lg-7 devise-form">
          <div class="contact_form_container">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "clearfix", id: "contact_form") do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <%= f.label :adresse_email %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "contact_input contact_input_subject", id: "contact_input_subject", type: "email", placeholder: "Adresse email" %>
            <%= f.label :mot_de_passe %><br>
            <%= f.password_field :password, autocomplete: "current-password", class: "contact_input contact_input_subject", id: "contact_input_subject", type: "password", placeholder: "Mot de passe" %>
            <div class="remember_me">
              <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :se_rappeler_de_moi %>
              <% end %>
            </div>
            <%= f.submit "Connexion", class: "contact_send_btn trans_200", id: "contact_send_btn" %>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
